<section class="containerSection index visible">
  <header>
    <div class="sectionHeaderContent index">
      <img src="/assets/images/logo-arthur-vasconcelos-neg.png" alt="">

      <h2>Hey You! <svg class="icon icon-hand-spock-o"><use xlink:href="/assets/images/symbol-defs.svg#icon-hand-spock-o"></use></svg></h2>

      <p>I'm Arthur Vasconcelos, a <%- new Date().getFullYear() - 1989 %>-year old nerd living in Rio de Janeiro. I love being a developer and learning new stuff! I currently work at the <strong><em>Igarapé Institute</em></strong> but I'm always involved in Open Source or freelance projects in my spare time.</p>

      <span>
        <a href="https://github.com/arthurvasconcelos" target="_blank"><svg class="icon icon-github"><use xlink:href="/assets/images/symbol-defs.svg#icon-github"></use></svg></a>
        <a href="https://bitbucket.org/alfv89/" target="_blank"><svg class="icon icon-bitbucket"><use xlink:href="/assets/images/symbol-defs.svg#icon-bitbucket"></use></svg></a>
        <a href="https://gitlab.com/u/alfv89" target="_blank"><svg class="icon icon-gitlab"><use xlink:href="/assets/images/symbol-defs.svg#icon-gitlab"></use></svg></a>
        <a href="https://jsfiddle.net/user/arthurvasconcelos/" target="_blank"><svg class="icon icon-jsfiddle"><use xlink:href="/assets/images/symbol-defs.svg#icon-jsfiddle"></use></svg></a>
        <a href="http://codepen.io/alfv89/" target="_blank"><svg class="icon icon-codepen"><use xlink:href="/assets/images/symbol-defs.svg#icon-codepen"></use></svg></a>
        <a href="http://stackoverflow.com/users/3130385/arthur-vasconcelos?tab=profile" target="_blank"><svg class="icon icon-stack-overflow"><use xlink:href="/assets/images/symbol-defs.svg#icon-stack-overflow"></use></svg></a>
      </span>
    </div>

    <a href="#index-content" class="scrollToContent">Scroll Down</a>

    <a href="https://internetdefenseleague.org" class="idlMember" target="_blank"><img src="https://internetdefenseleague.org/images/badges/final/footer_badge.png" alt="Member of The Internet Defense League"/></a>

    <div class="githubHosted">
      Proudly hosted by
      <a href="https://github.com" target="_blank"><img src="assets/images/fixed-gh-logo.png" width="100" height="30" alt="GitHub • Social coding"></a>
    </div>
  </header>

  <%
    function Shuffle(o) {
      for(var j, x, i = o.length; i; j = parseInt(Math.random() * i), x = o[--i], o[i] = o[j], o[j] = x);
      return o;
    }
  %>

  <div class="sectionContent" id="index-content">
    <h3>Skills</h3>
    <ul class="skillList">
      <% Shuffle(skills).forEach(function(item) { %>
        <!--  Item  -->
        <li data-name="<%= item.name %>" data-percent="<%= item.percent %>%">
          <svg viewBox="-10 -10 220 220">
            <g fill="none" stroke-width="6" transform="translate(100,100)">
              <path d="M 0,-100 A 100,100 0 0,1 86.6,-50" stroke="url(#cl1)"/>
              <path d="M 86.6,-50 A 100,100 0 0,1 86.6,50" stroke="url(#cl2)"/>
              <path d="M 86.6,50 A 100,100 0 0,1 0,100" stroke="url(#cl3)"/>
              <path d="M 0,100 A 100,100 0 0,1 -86.6,50" stroke="url(#cl4)"/>
              <path d="M -86.6,50 A 100,100 0 0,1 -86.6,-50" stroke="url(#cl5)"/>
              <path d="M -86.6,-50 A 100,100 0 0,1 0,-100" stroke="url(#cl6)"/>
            </g>
          </svg>
          <svg viewBox="-10 -10 220 220">
            <path d="M200,100 C200,44.771525 155.228475,0 100,0 C44.771525,0 0,44.771525 0,100 C0,155.228475 44.771525,200 100,200 C155.228475,200 200,155.228475 200,100 Z" stroke-dashoffset="<%= (dashoffset * item.percent) / 100 %>"></path>
          </svg>
        </li>
      <% }); %>
    </ul>

    <!--  Defining Angle Gradient Colors  -->
    <svg width="0" height="0">
      <defs>
        <linearGradient id="cl1" gradientUnits="objectBoundingBox" x1="0" y1="0" x2="1" y2="1">
            <stop stop-color="#618099"/>
            <stop offset="100%" stop-color="#8e6677"/>
        </linearGradient>
        <linearGradient id="cl2" gradientUnits="objectBoundingBox" x1="0" y1="0" x2="0" y2="1">
            <stop stop-color="#8e6677"/>
            <stop offset="100%" stop-color="#9b5e67"/>
        </linearGradient>
        <linearGradient id="cl3" gradientUnits="objectBoundingBox" x1="1" y1="0" x2="0" y2="1">
            <stop stop-color="#9b5e67"/>
            <stop offset="100%" stop-color="#9c787a"/>
        </linearGradient>
        <linearGradient id="cl4" gradientUnits="objectBoundingBox" x1="1" y1="1" x2="0" y2="0">
            <stop stop-color="#9c787a"/>
            <stop offset="100%" stop-color="#817a94"/>
        </linearGradient>
        <linearGradient id="cl5" gradientUnits="objectBoundingBox" x1="0" y1="1" x2="0" y2="0">
            <stop stop-color="#817a94"/>
            <stop offset="100%" stop-color="#498a98"/>
        </linearGradient>
        <linearGradient id="cl6" gradientUnits="objectBoundingBox" x1="0" y1="1" x2="1" y2="0">
            <stop stop-color="#498a98"/>
            <stop offset="100%" stop-color="#618099"/>
        </linearGradient>
      </defs>
    </svg>

    <h3 class="noMarginBottom">Experience</h3>
    <section id="cd-timeline" class="cd-container noMarginTop">

      <% experiences.forEach(function(item) { %>
        <div class="cd-timeline-block">
          <div class="cd-timeline-img experience">
            <svg class="icon icon-office"><use xlink:href="/assets/images/symbol-defs.svg#icon-office"></use></svg>
          </div>

          <div class="cd-timeline-content">
            <!--<h2>Title of section 1</h2>-->
            <%- item.logo %>

            <h4>
              <i class="fa fa-at" aria-hidden="true"></i>
              Role:
            </h4>
            <span class="role"><%= item.role %></span>

            <h4>
              <i class="fa fa-commenting-o" aria-hidden="true"></i>
              Description
            </h4>
            <p><%= item.description %></p>

            <% if(item.technologies.length > 0) { %>
              <h4>
                <i class="fa fa-code-fork" aria-hidden="true"></i>
                Technologies
              </h4>
              <ul>
                <% item.technologies.forEach(function(tech) { %>
                  <li>
                    <b><%= tech.name %>:</b> <%= tech.values %>
                  </li>
                <% }); %>
              </ul>
            <% } %>
            <span class="cd-date"><%= item.date %></span>
          </div>
        </div>
      <% }); %>

    </section> <!-- cd-timeline -->
  </div> <!-- .sectionContent -->
</section> <!-- .containerSection -->
